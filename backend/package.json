{
  "name": "robot",
  "main": "dist/app.js",
  "bin": "dist/app.js",
  "scripts": {
    "dev": "NODE_ENV=development node checkApi.js && NODE_ENV=development nodemon src/app.ts",
    "start": "NODE_ENV=production node checkApi.js && pm2 restart ecosystem.config.js --env production",
    "build": "tsc"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@dfinity/agent": "^2.0.0",
    "@dfinity/candid": "^2.0.0",
    "@dfinity/identity": "^2.0.0",
    "@dfinity/identity-secp256k1": "^2.0.0",
    "@dfinity/principal": "^2.0.0",
    "@dfinity/rosetta-client": "^0.6.0",
    "axios": "^1.7.4",
    "axios-retry": "^4.5.0",
    "basic-auth": "^2.0.1",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "https-proxy-agent": "^7.0.5",
    "jsonwebtoken": "^9.0.2",
    "key-encoder": "^2.1.0-beta.0",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "node-schedule": "^2.1.1",
    "pm2": "^6.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^16.11.0",
    "@types/node-schedule": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^3.1.4",
    "prettier": "^2.2.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.1.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2020
    },
    "rules": {
      "no-redeclare": "error",
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-explicit-any": [
        "off"
      ],
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/ban-types": [
        "error",
        {
          "extendDefaults": true,
          "types": {
            "{}": false
          }
        }
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "no-debugger": "off"
    }
  }
}
